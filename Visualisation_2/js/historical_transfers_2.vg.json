{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Highest Transfer Fee per Year by League from 2000-2019",
  "data": { "url": "data/top250-00-19.json" },
  "vconcat": [
    {
      "width": "container",
      "height": 400,
      "mark": "area",
      "encoding": {
        "x": {
          "timeUnit": "year",
          "field": "Season",
          "axis": { "format": "%Y" }
        },
        "y": {
          "title": "Maximum Transfer Fee (€)",
          "aggregate": "max",
          "field": "Transfer_fee"
        },
        "color": {
          "field": "League_to",
          "title": "League",
          "type": "nominal",
          "scale": {
            "domain": [
              "Premier League",
              "Bundesliga",
              "La Liga",
              "Ligue 1",
              "Serie A"
            ],
            "range": ["purple", "red", "gold", "navy", "turquoise"]
          }
        },
        "tooltip": [
          { "field": "League_to", "type": "nominal", "title": "League" },
          {
            "field": "Transfer_fee",
            "aggregate": "average",
            "type": "quantitative",
            "title": "Max Transfer Fee (€)",
            "format": ",.0f"
          }
        ]
      }
    }
  ]
}
