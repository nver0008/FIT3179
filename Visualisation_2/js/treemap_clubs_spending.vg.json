{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 400,
  "height": 400,
  "title": "Top 5 Leagues Total Expenditure 2021",
  "data": [
    {
      "name": "transfers_in",
      "url": "data/top5-clubs-transfers.json",
      "format": { "type": "json" },
      "transform": [
        { "type": "nest", "keys": ["League", "Team"] },
        {
          "type": "treemap",
          "field": "Transfer Sum",
          "method": "squarify",
          "ratio": 1.5,
          "paddingInner": 1,
          "size": [{ "signal": "width" }, { "signal": "height" }]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "Premier League",
        "Bundesliga",
        "La Liga",
        "Ligue 1",
        "Serie A"
      ],
      "range": ["purple", "red", "gold", "navy", "turquoise"]
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": { "data": "transfers_in" },
      "encode": {
        "update": {
          "fill": { "scale": "color", "field": "League", "opacity": 0.5 },
          "x": { "field": "x0" },
          "x2": { "field": "x1" },
          "y": { "field": "y0" },
          "y2": { "field": "y1" },
          "tooltip": {
            "signal": "{'title': datum.Team, 'League': datum.League, 'Total Transfer Fees (â‚¬)': datum['Transfer Sum']}"
          }
        }
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "encode": {
        "title": {
          "name": "Legend",
          "update": {
            "fontSize": { "value": 14 }
          }
        },
        "labels": {
          "update": {
            "fontSize": { "value": 12 },
            "fill": { "value": "black" }
          }
        },
        "symbols": {
          "update": {
            "stroke": { "value": "transparent" }
          }
        }
      }
    }
  ]
}
